# Uygulama Ayarları
APP_NAME=Nilüfer Mahalle Komiteleri Platformu
APP_VERSION=0.1.0
DEBUG=False

# Veritabanı
# ÖNEMLİ: Production'da güçlü şifreler kullanın!
DATABASE_URL=postgresql://nilufer_user:CHANGE_THIS_PASSWORD@localhost:5432/nilufer_db

# Güvenlik
# ÖNEMLİ: Production'da mutlaka değiştirin! En az 32 karakter, rastgele ve güçlü olmalı.
# Güçlü bir SECRET_KEY oluşturmak için: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_MIN_32_CHARS_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
# Production'da sadece güvenilir domain'leri ekleyin!
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
